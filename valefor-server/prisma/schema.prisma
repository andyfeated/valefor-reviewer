generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              String          @id @default(cuid())
  email           String          @unique
  name            String
  avatarUrl       String
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  role            Role            @default(free_user)
  oauthIdentities OAuthIdentity[]
  reviews         Review[]
}

model OAuthIdentity {
  id             String @id @default(cuid())
  provider       String
  providerUserId String
  accessToken    String // expires in 2 hours
  refreshToken   String
  expiresIn      Int?

  userId String
  user   User   @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt

  @@unique([provider, providerUserId])
}

model Review {
  id String @id @default(cuid())

  provider           Provider
  pullRequestId      String
  pullRequestIid     String
  providerProjectId  String
  providerProjectIid String
  headSha            String

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  title          String
  description    String
  state          PullRequestState
  pullRequestUrl String
  sourceBranch   String
  targetBranch   String
  author         Json

  status     ReviewStatus @default(pending)
  failReason String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  diffs Diff[]

  @@unique([provider, pullRequestId])
}

model Diff {
  id       String @id @default(cuid())
  reviewId String
  review   Review @relation(fields: [reviewId], references: [id], onDelete: Cascade)

  path    String
  oldPath String?
  diff    String? @db.Text

  // Validation fields
  isValid          Boolean
  validationReason String?

  // AI fields
  criticalityLevel CriticalityLevel?
  concerns         Json? // Array of strings

  createdAt DateTime @default(now())

  @@unique([reviewId, path])
  @@index([reviewId])
  @@index([criticalityLevel])
}

enum Role {
  admin
  premium_user
  free_user
}

enum ReviewStatus {
  pending
  done
  failed
}

enum CriticalityLevel {
  passed
  minor
  major
  critical
}

enum PullRequestState {
  open
  closed
  merged
}

enum Provider {
  gitlab
  github
}
